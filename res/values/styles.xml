<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CurrencyTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar.ForceOverflow">
        <item name="android:dialogTheme">@style/CurrencyTheme.Dialog</item>
    </style>

    <style name="CurrencyTheme.Dialog" parent="@style/Theme.Sherlock.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_background2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:maxWidth">325dip</item>
    </style>

    <style name="CurrencyTheme.FloatingFragment" parent="@style/Theme.Sherlock.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:maxWidth">325dip</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/dialog_button_selector</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>