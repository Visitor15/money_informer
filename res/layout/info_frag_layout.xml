    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#22000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0" >

            <LinearLayout
                android:id="@+id/ll_left_col_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:background="@drawable/title_selector"
                android:clickable="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/tv_titleLeft"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70"
                        android:paddingLeft="8dip"
                        android:text="@string/USD"
                        android:textColor="#44000000"
                        android:textSize="36sp" />

                    <FrameLayout
                        android:layout_width="0dip"
                        android:layout_height="32dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.30" >

                        <ImageView
                            android:id="@+id/iv_left_info_icon"
                            android:layout_width="32dip"
                            android:layout_height="32dip"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="0.30"
                            android:padding="2dip"
                            android:alpha="0.60"
                            android:background="@drawable/title_selector"
                            android:scaleType="fitCenter"
                            android:src="@drawable/info_icon" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_subtitleLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingLeft="8dip"
                    android:text="@string/united_states"
                    android:textAllCaps="true"
                    android:textColor="#44000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:paddingLeft="8dip" >

                    <TextView
                        android:id="@+id/tv_left_col_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/default_amount"
                        android:textColor="#44000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decimal_point"
                        android:textColor="#44000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_left_col_currency_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_amount"
                        android:textColor="#44000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_gravity="top"
                    android:background="#22000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_gravity="bottom"
                    android:background="#22000000" />
            </LinearLayout>

