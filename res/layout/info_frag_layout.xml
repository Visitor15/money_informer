            <LinearLayout
                android:id="@+id/ll_right_col_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:background="@drawable/title_selector"
                android:clickable="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <FrameLayout
                        android:layout_width="0dip"
                        android:layout_height="32dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.30" >

                        <ImageView
                            android:id="@+id/iv_right_info_icon"
                            android:layout_width="32dip"
                            android:layout_height="32dip"
                            android:layout_gravity="right|center_vertical"
                            android:padding="2dip"
                            android:alpha="0.60"
                            android:background="@drawable/title_selector"
                            android:scaleType="fitCenter"
                            android:src="@drawable/info_icon" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_titleRight"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70"
                        android:gravity="right"
                        android:paddingRight="8dip"
                        android:text="@string/JPY"
                        android:textColor="#44000000"
                        android:textSize="36sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_subtitleRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:lines="2"
                    android:paddingRight="8dip"
                    android:text="@string/japan"
                    android:textAllCaps="true"
                    android:textColor="#44000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:paddingRight="8dip" >

                    <TextView
                        android:id="@+id/tv_right_col_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/default_amount"
                        android:textColor="#66FF0000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decimal_point"
                        android:textColor="#66FF0000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_right_col_currency_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_amount"
                        android:textColor="#66FF0000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#22000000" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        layout="@layout/info_panel_layout" />

</LinearLayout>